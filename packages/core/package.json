{
  "name": "@brail/core",
  "version": "0.2.0-alpha.11",
  "main": "./dist/client.js",
  "exports": {
    ".": {
      "require": "./dist/client.js",
      "default": "./dist/esm/client.js"
    },
    "./server": {
      "require": "./dist/server.js",
      "default": "./dist/esm/server.js"
    }
  },
  "scripts": {
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
