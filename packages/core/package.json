{
  "name": "@brail/core",
  "version": "0.3.0-canary.13",
  "main": "./dist/client.js",
  "exports": {
    ".": {
      "require": "./dist/client.js",
      "default": "./dist/esm/client.js"
    },
    "./server": {
      "require": "./dist/server.js",
      "default": "./dist/esm/server.js"
    }
  },
  "scripts": {
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "build": "run-p build:*",
    "dev:esm": "tsc -p tsconfig.esm.json -w",
    "dev:cjs": "tsc -p tsconfig.json -w",
    "dev": "npm-run-all --parallel dev:*",
    "version:patch": "pnpm version patch",
    "version:minor": "pnpm version minor",
    "version:major": "pnpm version major",
    "publish-pkg": "pnpm run build && pnpm publish --access=public",
    "test:unit": "jest .spec"
  },
  "dependencies": {
    "@brail/mjml": "workspace:*",
    "chalk": "^4.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "class-validator-jsonschema": "^3.1.1"
  },
  "peerDependencies": {
    "next": "^13.0.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^17.0.21",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "next": "^13.0.5",
    "openapi3-ts": "^3.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tslib": "^2.3.1",
    "typescript": "^4.8.4",
    "reflect-metadata": "^0.1.13"
  }
}
