{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "module": "CommonJS",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*", "types.d.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "./src/**/test",
    "./src/**/tests",
    "./src/cli",
    "./*d.ts"
  ]
}
