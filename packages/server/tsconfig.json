{
  "extends": "tsconfig/base.json",
  "include": ["./src"],
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["ES2015", "DOM"],
    "noErrorTruncation": true,
    "allowJs": true,
    "downlevelIteration": true,
    "jsx": "react",
    "moduleResolution": "nodenext",
    "isolatedModules": true
  }
}
